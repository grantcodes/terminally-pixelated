<!doctype html>
<html class="no-js" {{language_attributes}}>
{% include 'partials/head.twig' %}

    <body class="{{body_class}}">
        <div class="main-wrapper" id="main-wrapper">
            <div {% if header_image %}class="main-header-nav-wrap main-header-nav-wrap--image" style="background-image: url({{header_image.src|resize(1920, 800)}})"{% else %}class="main-header-nav-wrap" {% endif %}>
                <div class="layout-wrapper main-header-nav-wrap__inner">
                    {% block header %}
                        <header class="main-header">
                            <div class="main-header__inner">
                                <h1 class="main-title">
                                    {% if logo %}
                                        {{logo}}
                                    {% else %}
                                        <a href="{{site.url}}" rel="home">
                                            {{site.name}}
                                        </a>
                                    {% endif %}
                                </h1>
                            </div>
                        </header>
                    {% endblock %}
                    <div class="main-nav-wrapper">
                        <a href="#nav-main-nav" class="main-nav-toggle" id="main-nav-toggle">{{icon('menu')}}</a>
                        {% include 'components/nav.twig' with { 'nav_class': 'main-nav', 'menu': main_menu } %}
                    </div>
                </div>
            </div>

            <div class="main-content-sidebar-wrap layout-wrapper">
                <main role="main" class="main-content {% if not main_sidebar %}main-content--full-width{% endif %}">
                    <div class="wrapper">
                        {% block content %}
                        Sorry, no content
                        {% endblock %}
                        {% block after_content %}
                            {% if pagination.pages %}
                                {% include 'components/pagination.twig' %}
                            {% endif %}
                        {% endblock %}
                    </div>
                </main>

                {% if main_sidebar %}
                    <aside class="main-aside {{sidebar_class}}">
                        {{main_sidebar}}
                    </aside>
                {% endif %}
            </div>
            <footer class="main-footer">
                <div class="main-footer__inner layout-wrapper">
                    {% if footer_widgets %}
                        <section class="footer-widgets-wrapper">
                            {% for widget_area in footer_widgets %}
                                <div class="footer-widgets footer-widgets--{{loop.index}}">
                                    {{widget_area}}
                                </div>
                            {% endfor %}
                        </section>
                    {% endif %}
                    <section class="footer-text">
                        <p>{{footer_text}}</p>
                    </section>
                </div>
            </footer>
        </div>
        {# {% include 'components/photoswipe.twig' %} #}
        {{wp_footer}}
    </body>
</html>
