<nav class="pagination">
    {% if pagination.prev %}
        <a href="{{pagination.prev.link}}" class="pagination__link--prev {{pagination.prev.link|length ? '' : 'invisible'}}"><span class="pagination__link--prev__text">Prev</span></a>
    {% endif %}
    <ul>
        {% for page in pagination.pages %}
            <li>
                {% if page.link %}
                    <a href="{{page.link}}" class="pagination__link {{page.class}}">{{page.title}}</a>
                {% else %}
                    <span class="pagination__link {{page.class}}">{{page.title}}</span>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
    {% if pagination.next %}
        <a href="{{pagination.next.link}}" class="pagination__link--next {{pagination.next.link|length ? '' : 'invisible'}}"><span class="pagination__link--next__text">Next</span></a>
    {% endif %}
</nav>