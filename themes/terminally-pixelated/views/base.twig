{{fn('tha_html_before')}}
<!doctype html>
<html class="no-js" {{language_attributes}}>
{% include 'partials/head.twig' %}

    <body class="{{body_class}}" itemscope="itemscope" itemtype="http://schema.org/WebPage">
        {{fn('tha_body_top')}}
        <div class="main-wrapper" id="main-wrapper">
            <div class="main-header-nav-wrap">
                {{fn('tha_header_before')}}
                {% block header %}
                    <header class="main-header" role='banner' itemscope="itemscope" itemtype="http://schema.org/WPHeader">
                        <div class="main-header__inner">
                            {{fn('tha_header_top')}}
                            <h1 class="main-title" itemprop="headline">
                                <a href="{{site.url}}" rel="home">
                                    {% if theme.theme_mod('terminally_pixelated_logo') %}
                                        {% set logo = TimberImage(theme.theme_mod('terminally_pixelated_logo')) %}
                                        <img src="{{logo.src}}" alt="{{site.name}}">
                                    {% else %}
                                        {{site.name}}
                                    {% endif %}
                                </a>
                            </h1>
                            {{fn('tha_header_bottom')}}
                        </div>
                    </header>
                {% endblock %}
                {{fn('tha_header_after')}}
                <div class="main-nav-wrapper">
                    {% include 'components/nav.twig' with { 'nav_class': terminally_pixelated.classes.nav, 'menu': main_menu } %}
                </div>
            </div>

            {{fn('tha_content_before')}}
            <div class="main-content-sidebar-wrap">
                <main role="main" class="{{terminally_pixelated.classes.content}} {% if not main_sidebar %}{{terminally_pixelated.classes.content}}--full-width{% endif %}" itemprop="mainContentOfPage" itemscope="itemscope" itemtype="http://schema.org/{{schema.type}}">
                    {% if title %}
                        <header role="heading">
                            <h1 class="posttitle p-name">{{title}}</h1>
                        </header>
                    {% endif %}
                    <div class="wrapper">
                        {{fn('tha_content_top')}}
                        {% block content %}
                        Sorry, no content
                        {% endblock %}
                        {% block after_content %}
                            {% if pagination %}
                                {% include 'components/pagination.twig' %}
                            {% endif %}
                        {% endblock %}
                        {{fn('tha_content_bottom')}}
                    </div>
                </main>
                {{fn('tha_content_after')}}

                {% if main_sidebar %}
                    {{fn('tha_sidebars_before')}}
                    <aside class="main-aside {{sidebar_class}}">
                        {{fn('tha_sidebar_top')}}
                        {{main_sidebar}}
                        {{fn('tha_sidebar_bottom')}}
                    </aside>
                    {{fn('tha_sidebars_after')}}
                {% endif %}
            </div>
            {{fn('tha_footer_before')}}
            <footer class="{{terminally_pixelated.classes.footer}}" role="contentinfo" itemscope="itemscope" itemtype="http://schema.org/WPFooter">
                <div class="{{terminally_pixelated.classes.footer}}__inner">
                    {{fn('tha_footer_top')}}
                    {% if footer_widgets %}
                        <section class="footer-widgets-wrapper">
                            {% for widget_area in footer_widgets %}
                                <div class="footer-widgets footer-widgets--{{loop.index}}">
                                    {{widget_area}}
                                </div>
                            {% endfor %}
                        </section>
                    {% endif %}
                    <section class="footer-text">
                        <p>Copyright  {{ 'now'|date('Y') }} {{site.name}} | All Rights Reserved.</p>
                    </section>
                    {{fn('tha_footer_bottom')}}
                </div>
            </footer>
            {{fn('tha_footer_after')}}
        </div>
        {{wp_footer}}
        {{fn('tha_body_bottom')}}
    </body>
</html>
